<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ToDo.WP.Resources.Styles">

	<Style x:Key="styleButtonBase" TargetType="Button">
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="VerticalAlignment" Value="Stretch"/>
		<Setter Property="FontFamily" Value="Microsoft YaHei Light"/>
		<Setter Property="FontSize" Value="32"/>
		<Setter Property="BorderBrush" Value="#FFC4C5CB"/>
	</Style>

	<Style x:Key="styleTakePhotoButton" TargetType="Button" BasedOn="{StaticResource ResourceKey=styleButtonBase}">
		<Setter Property="Background" Value="#FF4484F1"/>
	</Style>

	<Style x:Key="styleOpenPhotoButton" TargetType="Button" BasedOn="{StaticResource ResourceKey=styleButtonBase}">
		<Setter Property="Background" Value="#FF2E5CB3"/>
	</Style>

</ResourceDictionary>
